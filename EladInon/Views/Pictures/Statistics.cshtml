
@{
    ViewData["Title"] = "Statistics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Statistics</h2>
<table>
    <tr>
        <td>
            <div id="locatioTypePie"></div>
        </td>
        <td>
            <div id="albumTypePie"></div>
        </td>
    </tr>
    <tr>
        <td>
            <div id="LocationPie"></div>
        </td>
        </tr>
</table>



@section Scripts {
    <script src="~/lib/d3/d3.min.js"></script>
    <script src="~/lib/d3pie/d3pie.min.js"></script>
    <script>
        $.ajax({
            url: "/Pictures/LocationTypeStatistic/", success: function (result) {

                if (result.length === 0) {
                    return;
                }
                var pie = new d3pie("locatioTypePie", {
                    header: {
                        title: {
                            text: "סוגי לוקיישנים"
                        },
                        location: "Top-center"
                    },
                    size: {
                        pieInnerRadius: "0%"
                    },
                    data: {
                        sortOrder: "label-asc",
                        content: result,

                    },
                });

            }
        });

        $.ajax({
            url: "/Pictures/AlbumTypeStatistic/", success: function (result) {
    
                if (result.length === 0) {
                    return;
                }
                var pie = new d3pie("albumTypePie", {
                    header: {
                        title: {
                            text: "סוגי אלבומים"
                        },
                        location: "Top-center"
                    },
                    size: {
                        pieInnerRadius: "0%"
                    },
                    data: {
                        sortOrder: "label-asc",
                        content: result,
    
                    },
                });
    
            }
        });

        $.ajax({
            url: "/Pictures/LocationsStatistic/", success: function (result) {

                if (result.length === 0) {
                    return;
                }
                var pie = new d3pie("LocationPie", {
                    header: {
                        title: {
                            text: "מקומות"
                        },
                        location: "Top-center"
                    },
                    size: {
                        pieInnerRadius: "0%"
                    },
                    data: {
                        sortOrder: "label-asc",
                        content: result,

                    },
                });

            }
        });
    </script>
}